{
	"AVA": {
		"BackgroundImage": "%SYNCTHING%/personal/images/games/DOOM/vlcsnap-2019-05-14-23h21m27s843.png",
		"ToggleUIKey": "Space",
		"ToggleUIKeyModifiers": "Alt"
	},

	"Indexer.FileSystem": {
		"Paths": [
			{ "Path": "%ProgramData%\\Microsoft\\Windows\\Start Menu\\Programs", "Includes": [ "**" ] },
			{ "Path": "%APPDATA%\\Microsoft\\Windows\\Start Menu", "Includes": [ "**" ] },
			{ "Path": "%SYNCTHING%\\apps", "Includes": [ "**.exe", ".msc" ] },
			{ "Path": "%SYNCTHING%", "Includes": [ "**" ], "Excludes": [ "apps" ] }
		]
	},

	"LocalBookmarks": {
		"PathToBookmarks": "%SYNCTHING%\\personal\\notes\\bookmarks.csv"
	},

	"Macros": {
		"Macros": [
			{ "Command": "kp",		"Name": "KeePassXC",		"FileName": "%SYNCTHING%/apps/keepassxc/keepassxc.exe", "Arguments": "--allow-screencapture" },

			{ "Command": "ps5",		"Name": "PowerShell 5",		"FileName": "powershell",	"Arguments": "-nologo" },
			{ "Command": "ps6",		"Name": "PowerShell 6",		"FileName": "pwsh",			"Arguments": "-nologo" },

			{ "Command": "blender", "Name": "Blender",			"FileName": "D:/apps/blender/blender-4.0.1-windows-x64/blender.exe",		"Icon": "%SYNCTHING%/personal/images/icons/blender_01.png" },

			{
				"Command": "hosts",
				"FileName": "notepad++",
				"Arguments": "C:/Windows/System32/drivers/etc/hosts",
				"Name": "Edit Hosts File",
				"RunAsAdmin": true
			},

			{
				"Command": "vsc",
				"FileName": "code",
				"Name": "Visual Studio Code",
				"Icon": "%SYNCTHING%/Apps/vscode/oceanic_next.png"
			},

			{
				"Command": "vscpp",
				"FileName": "C:/tools/vsc/cpp/code.exe",
				"Name": "VS Code - C++",
				"Icon": "%SYNCTHING%/Apps/vscode/cpp.png"
			},

			{
				"Command": "vscjs",
				"FileName": "C:/tools/vsc/js/code.exe",
				"Name": "VS Code - JS",
				"Icon": "%SYNCTHING%/Apps/vscode/oceanic_next.png"
			}

		]
	},

	"Time": {
		"DefaultCities": [
			"tokyo",
			"sydney",
			"moscow",
			"new york"
		],
		"MinPopulation": 500000
	}
